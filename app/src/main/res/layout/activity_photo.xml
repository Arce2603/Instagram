<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="172dp"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="102dp"
        android:background="@color/black_50_transparent"/>

    <EditText
        android:id="@+id/etCapt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp"
        android:ems="10"
        android:hint="Enter a caption"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnTake"
        android:layout_marginEnd="58dp"
        android:background="@drawable/round_buttons"
        android:drawableTop="@drawable/ic_send_black_24dp"
        android:paddingTop="12dp"
        android:text="       " />

    <Button
        android:id="@+id/btnTake"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp"
        android:layout_marginStart="75dp"
        android:background="@drawable/round_buttons"
        android:drawableTop="@drawable/ic_camera_alt_black_24dp"
        android:paddingTop="12dp"
        android:text="       "
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="445dp" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

</RelativeLayout>